/* pages/index/index.wxss */
.banners{
    width: 100%;
    height: 300rpx;
}
.banners image{
    width: 100%;
    height: 100%;
 }
/*  五个图标导航 */
 .navContainer{
    display: flex;
 }  

 .navItem{
     display: flex;
     flex-direction: column;
     align-items: center;
     width: 20%;
 }

 .navItem .iconfont{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    text-align: center;
    line-height: 100rpx;
    background: rgb(240, 19, 19);
    font-size: 50rpx;
    color : white;
    margin: 20rpx 0;
 }
 .navItem text{
     font-size: 26rpx;

 }

 /* 推荐歌曲 */
 .recommendContainer{
    padding: 20rpx;
}
.recommendContainer .header{
    padding-bottom: 10rpx;
}
 .recommendContainer .header .title{
     font-size: 32rpx;
     line-height: 80rpx;
     color: #666;
 }
 .recommendContainer .header .more{
     float: right;
     border: 1rpx solid #333;
     border-radius: 10%;
     padding: 10rpx 20rpx ;
 }
/* 滚动视图 */
.scrollStyle{
    display: flex;
    padding: 20rpx;
    height: 280rpx;
}
.scrollItem{
    width: 200rpx;
    margin-right: 20rpx ;
}
.scrollItem .scollItemImage{
    width: 200rpx;
    height: 200rpx;
    border-radius: 10%;
}
.scrollItem text{
    font-size: 26rpx;
    /* 单行文本移除 用省略号代替 */
    /* display: block;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis; */

    /* 多行文本溢出 */
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}
